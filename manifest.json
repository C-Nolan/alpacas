{
  "manifest_version": 2,

  "name": "[Need cool Alpacas diversity app name here]",
  "description": "Need cool description here",
  "version": "1.0",
  
    "background": {
    "scripts":[
      "app/tabs.js"
    ],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["app/content_script.js"]
    }
  ],

  "browser_action": {
    "default_icon": "img/alpaca.png",
    "default_popup": "app/overlay.html",
    "default_title": "Open the Alpaca App"
  },
  
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}